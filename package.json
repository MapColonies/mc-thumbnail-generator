{
  "name": "mc-thumbnail-generator",
  "version": "1.1.0",
  "description": "This is template for map colonies typescript service",
  "main": "./src/index.ts",
  "scripts": {
    "test:unit": "jest --config=./tests/configurations/unit/jest.config.js",
    "test:integration": "jest --config=./tests/configurations/integration/jest.config.js",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prelint:fix": "npm run format:fix",
    "prelint": "npm run format",
    "lint:openapi": "openapi lint ./openapi3.yaml",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "release": "standard-version",
    "test": "npm run test:unit && npm run test:integration",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json  && npm run assets:copy",
    "start": "concurrently --raw \"npm:start:thumbnail-generator\" \"npm:build && cd dist && node ./index.js\"",
    "start-prod": "concurrently --raw \"npm:start:thumbnail-generator\" \"cd dist && node ./index.js\"",
    "start:thumbnail-generator": "http-server ./src/cesiumClientWeb --port 4000 --silent",
    "start-dev": "npx tsc-watch --project tsconfig.build.json --onsuccess \"node ./dist/index.js\"",
    "assets:copy": "copyfiles -f ./config/* ./dist/config && copyfiles -f ./openapi3.yaml ./dist/ && copyfiles ./package.json dist",
    "clean": "rimraf dist",
    "install": "npx husky install",
    "postinstall": "npm run copyassets:all",
    "copyassets:all": "npm run copyassets:cesium && npm run copyassets:mc-fonts && npm run copyassets:turf",
    "copyassets:cesium": "copyfiles -u 3 \"./node_modules/cesium/Build/Cesium/**/*\" \"./src/cesiumClientWeb/scripts\"",
    "copyassets:turf": "copyfiles -u 1 \"./node_modules/@turf/turf/turf.min.js\" \"./src/cesiumClientWeb/scripts\"",
    "copyassets:mc-fonts": "copyfiles -u 6 \"./node_modules/@map-colonies/static-assets/dist/fonts/mc-font/fonts/*\" \"./node_modules/@map-colonies/static-assets/dist/fonts/mc-font/style.css\" \"./src/cesiumClientWeb/public/fonts/mc-icons\"",
    "helm-update": "helm dependency update helm",
    "helm-assets": "npm run helm-update && tar -xzvf ./helm/charts/helm-common*.tgz --strip-components=1 helm-common/schemas",
    "helm-install": "npm run helm-update && helm install -f 'helm/global.yaml' -f 'helm/values.yaml' mc-thumbnail-generator helm",
    "helm-uninstall": "helm uninstall mc-thumbnail-generator"
  },
  "directories": {
    "test": "tests"
  },
  "watch": {
    "ignore": ""
  },
  "author": "MapColonies",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@godaddy/terminus": "4.10.2",
    "@map-colonies/error-express-handler": "^2.1.0",
    "@map-colonies/express-access-log-middleware": "^1.0.0",
    "@map-colonies/js-logger": "^0.0.4",
    "@map-colonies/openapi-express-viewer": "^2.0.1",
    "@map-colonies/read-pkg": "0.0.1",
    "@map-colonies/static-assets": "^0.2.0",
    "@map-colonies/telemetry": "3.1.0",
    "@opentelemetry/api": "1.0.1",
    "@opentelemetry/api-metrics": "0.23.0",
    "@opentelemetry/instrumentation-express": "0.23.0",
    "@opentelemetry/instrumentation-http": "0.23.0",
    "@turf/turf": "^6.5.0",
    "@types/archiver": "^5.3.1",
    "@types/lodash": "^4.14.182",
    "@types/puppeteer": "^5.4.6",
    "archiver": "^5.3.1",
    "axios": "^0.27.2",
    "cesium": "^1.111.0",
    "compression": "^1.7.4",
    "concurrently": "^7.2.2",
    "config": "^3.3.7",
    "express": "^4.18.1",
    "express-openapi-validator": "^4.13.8",
    "http-server": "^14.1.1",
    "http-status-codes": "^2.2.0",
    "lodash": "^4.17.21",
    "puppeteer": "^14.3.0",
    "reflect-metadata": "^0.1.13",
    "sharp": "^0.30.7",
    "tsc-watch": "^5.0.3",
    "tsyringe": "^4.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.1",
    "@commitlint/config-conventional": "^17.0.0",
    "@map-colonies/eslint-config": "^3.1.1",
    "@map-colonies/prettier-config": "0.0.1",
    "@map-colonies/standard-version-update-helm-version": "^2.0.1",
    "@map-colonies/standard-version-update-openapi3-version": "0.0.2",
    "@redocly/openapi-cli": "^1.0.0-beta.94",
    "@types/compression": "^1.7.2",
    "@types/config": "0.0.41",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.1",
    "@types/multer": "^1.4.7",
    "@types/sharp": "^0.30.4",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "commitlint": "^17.0.1",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.16.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "jest-create-mock-instance": "^2.0.0",
    "jest-html-reporters": "^3.0.8",
    "jest-openapi": "^0.14.2",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "standard-version": "^9.5.0",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.3",
    "typescript": "^4.6.3"
  }
}
