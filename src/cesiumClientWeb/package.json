{
  "name": "layer-preview-poc",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "http-server . --port 4000 --silent",
    "postinstall": "npm run copyassets:all",
    "copyassets:all": "npm run copyassets:cesium && npm run copyassets:mc-fonts && npm run copyassets:turf",
    "copyassets:cesium": "copyfiles -u 3 \"./node_modules/cesium/Build/Cesium/**/*\" \"./scripts\"",
    "copyassets:turf": "copyfiles -u 1 \"./node_modules/@turf/turf/turf.min.js\" \"./scripts\"",
    "copyassets:mc-fonts": "copyfiles -u 6 \"./node_modules/@map-colonies/static-assets/dist/fonts/mc-font/fonts/*\" \"./node_modules/@map-colonies/static-assets/dist/fonts/mc-font/style.css\" \"./public/fonts/mc-icons\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MapColonies/layer-preview-POC.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MapColonies/layer-preview-POC/issues"
  },
  "homepage": "https://github.com/MapColonies/layer-preview-POC#readme",
  "devDependencies": {
    "copyfiles": "^2.4.1"
  },
  "dependencies": {
    "@map-colonies/static-assets": "^0.2.0",
    "@turf/turf": "^6.5.0",
    "cesium": "^1.94.0",
    "http-server": "^14.1.1",
    "puppeteer": "^14.2.0"
  }
}
